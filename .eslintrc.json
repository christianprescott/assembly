{
    "env": {
      "browser": true,
      "mocha": true
    },
    "extends": "airbnb-base",
    "globals": {
      "DEBUG": false,
      "expect": true
    },
    "parser": "babel-eslint",
    "plugins": ["mocha"],
    "rules": {
      "function-paren-newline": ["error", "consistent"],
      "func-names": "off",
      "prefer-arrow-callback": "off",
      "no-param-reassign": "off",
      "no-underscore-dangle": "off",
      "object-curly-newline": ["error", { "consistent": true }],
      "semi": "off",
      "space-before-function-paren": ["error", "always"]
    }
}
